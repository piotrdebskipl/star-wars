{
  "openapi": "3.0.0",
  "info": {
    "description": "API Documentation",
    "version": "1.0.0",
    "title": "Star Wars API",
    "contact": {
      "email": "career@piotrdebski.pl"
    }
  },
  "servers": [
    {
      "url": "http://localhost:8080/",
      "description": "Local environment"
    }
  ],
  "tags": [
    {
      "name": "planets",
      "description": "Planet"
    }
  ],
  "paths": {
    "/planets": {
      "post": {
        "tags": [
          "planets"
        ],
        "summary": "Create planet",
        "description": "",
        "operationId": "createPlanet",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/PlanetInput"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Planet created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Planet"
                }
              }
            }
          },
          "400": {
            "description": "Bad request"
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      },
      "get": {
        "tags": [
          "planets"
        ],
        "summary": "Get all planets",
        "description": "",
        "operationId": "getPlanet",
        "responses": {
          "200": {
            "description": "Planet",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Planet"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request"
          },
          "401": {
            "description": "Unauthorized"
          },
          "404": {
            "description": "Not Found"
          }
        }
      }
    },
    "/planets/{id}": {
      "get": {
        "tags": [
          "planets"
        ],
        "summary": "Get planet by id",
        "description": "",
        "operationId": "getPlanetById",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Planet Id"
          }
        ],
        "responses": {
          "200": {
            "description": "Planet",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Planet"
                }
              }
            }
          },
          "400": {
            "description": "Bad request"
          },
          "401": {
            "description": "Unauthorized"
          },
          "404": {
            "description": "Not Found"
          }
        }
      },
      "put": {
        "tags": [
          "planets"
        ],
        "summary": "Edit planet by id",
        "description": "",
        "operationId": "editPlanetById",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Planet Id"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/PlanetInput"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Planet edited",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Planet"
                }
              }
            }
          },
          "400": {
            "description": "Bad request"
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      },
      "delete": {
        "tags": [
          "planets"
        ],
        "summary": "Delete planet by id",
        "description": "",
        "operationId": "deletePlanetById",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Planet Id"
          }
        ],
        "responses": {
          "200": {
            "description": "Planet",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "default": "Planet deleted successfully"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request"
          },
          "401": {
            "description": "Unauthorized"
          },
          "404": {
            "description": "Not Found"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "PlanetInput": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "default": ""
          }
        }
      },
      "Planet": {
        "type": "object",
        "properties": {
          "id": {
            "type": "number",
            "default": ""
          },
          "name": {
            "type": "string",
            "default": ""
          }
        }
      }
    }
  }
}
